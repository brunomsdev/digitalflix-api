generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  trailerUrl  String
  coverImage  String
  createdAt   DateTime @default(now())
}